##############################################
## THEMERC
## github.com/CouldBeThis/_xfce4themes-next-hidpi/
##############################################

## docs say: places a space between the right edge (top-right-active) and the button (close, hide…) when maximized.
## but actually spaces between right AND left edge and buttons.
maximized_offset=10

## force border color to be black for those themes where this is not the case
## left in file because sometimes it makes sense to toggle on
# active_border_color=#000000
# inactive_border_color=#000000

## shadow behind the title text (hard to read)
title_shadow_inactive=false
title_shadow_active=false

## fine adjustments of the text location in titlebar
# title_horizontal_offset=0
# title_vertical_offset_active=2
# title_vertical_offset_inactive=2

## show the application icon (true) or the theme-provided menu button (false))
show_app_icon=false

## space between each button
button_spacing=-1

##How the pixmap are arranged in the title bar.
## When set to “true”, the center pixmap is repeated so that it fills the entire window width
## When set to “false”, the center pixmap is repeated just enough so that the title fits
full_width_title=true

## shift buttons horizontally. value is relative to the corresponding application window border, not the frame border.
## in the next theme, omitting this value makes a tiny but annoying space on the right and left sides of the menubar.
button_offset=-3

## XFWM Versions 4.14.1 only
## crop the top frame border of maximized application windows.
frame_border_top=0

##############################################
## documentation of this file and xfwm themes:
## https://wiki.xfce.org/howto/xfwm4_theme
##############################################
